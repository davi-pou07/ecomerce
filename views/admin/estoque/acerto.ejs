                                    <%}%>
                                    <%if(linha.linha9 != '' ){%>
                                    <option value="<%=linha.linha9%>"><%=linha.linha9%></option>
                                    <%}%>
                                    <%if( linha.linha10 != '' ){%>
                                    <option value="<%=linha.linha10%>"><%=linha.linha10%></option>
                                    <%}%>
                            </select>
                            <div class="invalid-feedback">
                                Por favor, selecione!
                            </div>
                            
                        </div>

                        <div class="col-md-3">
                            <label for="titulo" class="form-label">Estoque</label>
                        <input type="text" class="form-control" name="nome" id="titulo"
                             autocomplete="off" required>
                        <div class="valid-feedback">
                            Tudo ok!
                        </div>
                        <div class="invalid-feedback">
                            Esse campo é obrigatório
                        </div>
                        </div>
                </div>

                <div class="card-footer">
                    <div class="card-footer">
                        <button class="btn btn-primary" id="buttom">Cadastrar</button>
                    </div>
                </div>
            </form>
            </div>
        </div>
        <%- include('../../partials/footer.ejs')%>
            <script>
                function teste() {

                    var produto = document.getElementById('produto').value
                    
                    window.location.href = '/admin/estoques/' + produto
                }
            </script>