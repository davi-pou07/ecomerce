                                    <option value="<%=linha.linha4%>"><%=linha.linha4%></option>
                                    <%}%>
                                    <%if(linha.linha5 != '' ){%>
                                    <option value="<%=linha.linha5%>"><%=linha.linha5%></option>
                                    <%}%>
                                    <%if(linha.linha6 != '' ){%>
                                    <option value="<%=linha.linha6%>"><%=linha.linha6%></option>
                                    <%}%>
                                    <%if(linha.linha7 != '' ){%>
