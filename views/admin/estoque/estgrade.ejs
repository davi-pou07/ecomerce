<%- include('./partials/head.ejs')%>

    <%- include('./partials/nav.ejs')%>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Listagem de estoque por produto</h1>
                <hr>
                    <select name="produtoId" id="produto" class="form-select" onchange="teste()" required>
                        <option value="0"></option>
                        <%if(prod==0){%>
                            <%produtos.forEach(produto=>{%>
                                <option value="<%=produto.id%>">
                                    <%=produto.nome%>
                                </option>
                                <%})%>
                                    <%}else{%>
                                        <%produtos.forEach(produto=>{%>
                                            <%if(produto.id==prod.id){%>
                                                <option value="<%=produto.id%>" selected>
                                                    <%=produto.nome%>
                                                </option>
                                                <%}else{%>
                                                    <option value="<%=produto.id%>">
                                                        <%=produto.nome%>
                                                    </option>
                                                    <%}%>
                                                        <%})%>
                                                            <%}%>
                    </select>
            </div>
            <div class="card-body">

            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>
        <%- include('./partials/footer.ejs')%>