<%- include('../../partials/head.ejs')%>

    <%- include('../../partials/nav.ejs')%>
        <div class="container-fluid">
            <div class="row">
                <%- include('../../partials/navegador.ejs')%>
                    <div class="card">
                        <div class="card-header">
                            <h1>Listagem de estoque por produto</h1>
                            <hr>
                            <select name="produtoId" id="produto" class="form-select" onchange="selecionar2()" required>
                                <option value="0"></option>
                                <%if(prod==0){%>
                                    <%produtos.forEach(produto=>{%>
                                        <option value="<%=produto.id%>">
                                            <%=produto.nome%>
                                        </option>
                                        <%})%>
                                            <%}else{%>
                                                <%produtos.forEach(produto=>{%>
                                                    <%if(produto.id==prod.id){%>
                                                        <option value="<%=produto.id%>" selected>
                                                            <%=produto.nome%>
                                                        </option>
                                                        <%}else{%>
                                                            <option value="<%=produto.id%>">
                                                                <%=produto.nome%>
                                                            </option>
                                                            <%}%>
                                                                <%})%>
                                                                    <%}%>
                            </select>
                        </div>
                        <div class="card-body">
                            <%if(grade !=0){%>
                                <h4>
                                    <%= grade.descricao%>
                                </h4>

                                <ul class="list-group list-group-horizontal">
                                    <button type="button" class="list-group-item list-group-item-action text-center active"
                                        aria-current="true">
                                        CÃ³digo
                                        <button type="button" class="list-group-item  text-center list-group-item-action active"
                                            aria-current="true">
                                            <%if(grade !=0){%>
                                                <%=grade.coluna%>
                                                    <%}else{%>
                                                        Coluna
                                                        <%}%>
                                                            <button type="button"
                                                                class="list-group-item text-center list-group-item-action active"
                                                                aria-current="true">
                                                                <%if(grade !=0){%>
                                                                    <%=grade.linha%>
                                                                        <%}else{%>
                                                                            Linha
                                                                            <%}%>
                                                                                <button type="button"
                                                                                    class="list-group-item text-center list-group-item-action active"
                                                                                    aria-current="true">
                                                                                    Status

                                </ul>
                                <%}%>

                                    <%if(estoques !=0){%>
                                        <%estoques.forEach(estoque=>{%>
                                            <ul class="list-group list-group-horizontal text-center">
                                                <button type="button" class="list-group-item list-group-item-action">
                                                    <%=estoque.id %>
                                                </button>
                                                <%colunas.forEach(coluna=>{%>
                                                    <%if(coluna.id==estoque.refcoluna){%>
                                                        <button type="button"
                                                            class="list-group-item list-group-item-action">
                                                            <%=coluna.coluna %>
                                                        </button>
                                                        <%}%>
                                                            <%})%>
                                                                <%linhas.forEach(linha=>{%>
                                                                    <%if(linha.id==estoque.reflinha){%>
                                                                        <button type="button"
                                                                            class="list-group-item list-group-item-action">
                                                                            <%=linha.linha %>
                                                                        </button>
                                                                        <%}%>
                                                                            <%})%>
                                                                            <select class="list-group-item list-group-item-action form-select">
                                                                                <%if(estoque.status == true){%>
                                                                                    <option value="<%=estoque.status%>" selected>Disponivel</option>
                                                                                    <option value="<%=estoque.status%>">Indisponivel</option>
                                                                                <%}else{%>
                                                                                    <option value="<%=estoque.status%>"selected>Indisponivel</option>
                                                                                    <option value="<%=estoque.status%>" >Disponivel</option>
                                                                                <%}%>
                                                                            </select>
                                                                                
                                            </ul>
                                            <%})%>
                                                <%}%>
                                                    <hr>
                                                    <button type="button"
                                                        class="btn btn-primary form-control">Salvar</button>
                        </div>
                        <div class="card-footer">

                        </div>
                    </div>
            </div>
        </div>
        <%- include('../../partials/footer.ejs')%>
            <script src="/js/selecionar.js"></script>